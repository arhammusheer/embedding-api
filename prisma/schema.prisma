// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        String      @id @default(cuid())
  email     String      @unique
  password  String
  name      String?
  namespace namespace[]
}

model namespace {
  id    String  @id @default(cuid())
  name  String
  slug  String  @unique
  user  user[]
  files files[]
}

model files {
  id          String    @id @default(cuid())
  name        String
  url         String
  embedStatus Boolean
  namespace   namespace @relation(fields: [namespaceId], references: [id])

  namespaceId String
}
